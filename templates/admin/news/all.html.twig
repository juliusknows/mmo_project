{% extends 'admin/base.html.twig' %}

{% block title %}Все новости{% endblock %}

{% block body %}

    <div class="container my-4">
        <h1 class="mb-4">Все новости</h1>

        <a href="{{ path('admin_news_new') }}" class="btn btn-primary mb-3">Добавить новость</a>

        {% if allNews is empty %}
            <div class="alert alert-info">
                <p>Пока нет ни одной новости.</p>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Заголовок</th>
                        <th>Краткое описание</th>
                        <th>Полный текст</th>
                        <th class="text-end">Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for news in allNews %}
                        <tr>
                            <td>{{ news.title|e }}</td>
                            <td>{{ news.summary|e }}</td>
                            <td>{{ news.content|e }}</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_news_edit', {'id': news.id}) }}"
                                       class="btn btn-sm btn-outline-primary">Редактировать</a>
                                    <a href="{{ path('admin_news_show', {'id': news.id}) }}"
                                       class="btn btn-sm btn-outline-success">Посмотреть</a>
                                    <form method="POST"
                                          action="{{ path('admin_news_delete', {'id': news.id}) }}"
                                          onsubmit="return confirm('Вы уверены, что хотите удалить эту новость?');"
                                          class="d-inline">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary mt-3">Назад</a>
        {% endif %}
    </div>
{% endblock %}


