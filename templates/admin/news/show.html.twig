{% extends 'admin/base.html.twig' %}

{% block title %}Новость{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="card mb-4">
            <div class="card-body">
                <h2 class="card-title">{{ news.title|e }}</h2>

                <p><strong>Краткое описание:</strong> {{ news.summary }}</p>
                <strong>Полный текст:</strong>
                <p>{{ news.content }}</p>

                <div class="d-flex gap-2 mt-3">
                    <form method="POST"
                          action="{{ path('admin_news_delete', {'id': news.id}) }}"
                          onsubmit="return confirm('Вы уверены, что хотите удалить эту новость?');">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                    <a href="{{ path('admin_news_edit', {'id': news.id}) }}" class="btn btn-outline-primary">Редактировать</a>
                </div>
            </div>
        </div>

        <div class="container">
            <h4 class="mb-3">Комментарии ({{ news.comments|length }})</h4>

            {% if news.comments is empty %}
                <div class="alert alert-info">
                    <p>Пока нет комментариев. Будьте первым!</p>
                </div>
            {% else %}
                {% for comment in news.comments %}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">{{ comment.author|e }}</h5>
                            <p class="card-text">{{ comment.text|e }}</p>
                            <div class="d-flex gap-2">
                                <form method="GET"
                                      action="{{ path('admin_comment_edit', {'id': comment.id}) }}">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Изменить</button>
                                </form>
                                <form method="POST"
                                      action="{{ path('admin_comment_delete', {'id': comment.id}) }}"
                                      onsubmit="return confirm('Вы уверены, что хотите удалить этот комментарий?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Удалить</button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>

        <div class="container mt-4">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Добавить комментарий</h4>
                </div>
                <div class="card-body">
                    <form method="POST" action="{{ path('admin_comment_create') }}">
                        <input type="hidden" name="news_id" value="{{ news.id }}">

                        <div class="mb-3">
                            <label for="author_{{ news.id }}" class="form-label">Автор:</label>
                            <input type="text"
                                   id="author_{{ news.id }}"
                                   name="author"
                                   class="form-control"
                                   required
                                   placeholder="Введите ваше имя">
                        </div>

                        <div class="mb-3">
                            <label for="comment_{{ news.id }}" class="form-label">Текст комментария:</label>
                            <textarea id="comment_{{ news.id }}"
                                      name="text"
                                      class="form-control"
                                      rows="4"
                                      required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">Отправить комментарий</button>
                    </form>
                </div>
            </div>
        </div>

        <footer class="news-footer mt-4 text-center">
            <a href="{{ path('admin_news_all') }}" class="btn btn-secondary">Назад к списку новостей</a>
        </footer>
    </div>
{% endblock %}

